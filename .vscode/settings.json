{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 88
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      // fixAll is intentionally left blank because it removes unused variables
      // and imports on save, which some devs don't want. If you want to use it, you
      // can set it in your user `settings.json` file.
      // "source.fixAll.ruff": true,
      "source.organizeImports.ruff": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.rulers": [
    88
  ],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 88,
  "files.associations": {
    "*.mdx": "markdown"
  },
  "files.exclude": {
    "**/venv": true
  },
  "grammarly.files.include": [
    "**/*.txt",
    "**/*.md",
    "**/*.mdx",
  ],
  "javascript.validate.enable": false,
  "python.terminal.executeInFileDir": true,
  "python.testing.pytestArgs": [
    "."
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "yaml.format.enable": true,
  "yaml.format.printWidth": 88,
  "yaml.format.singleQuote": false
}